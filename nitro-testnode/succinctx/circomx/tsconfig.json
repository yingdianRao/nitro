{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "es2022"
        ],
        "module": "es2022",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}